@model IEnumerable<BakeryShop.Models.Client>

@{
    ViewBag.Title = "Clients";
}

<h2>Our Clients</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(x => x.Name)
        </th>
        <th>
            @Html.DisplayNameFor(x => x.Email)
        </th>
        <th>
            @Html.DisplayNameFor(x => x.Phone)
        </th>
        <th>
            @Html.DisplayNameFor(x => x.Addres)
        </th>
    </tr>
    @foreach (var emp in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(x => emp.Name)
            </td>
            <td>
                @Html.DisplayFor(x => emp.Email)
            </td>
            <td>
                @Html.DisplayFor(x => emp.Phone)
            </td>
            <td>
                @Html.DisplayFor(x => emp.Addres)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = emp.ClientId }) |
                @Html.ActionLink("Detail", "Detail", new { id = emp.ClientId }) |
                @Html.ActionLink("Delete", "Delete", new { id = emp.ClientId })
            </td>
        </tr>
    }
</table> 