@model IEnumerable<BakeryShop.Models.Produkt>

@{
    ViewBag.Title = "Products";
}

<h2>Our Products</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(x => x.Name)
        </th>
        <th>
            @Html.DisplayNameFor(x => x.Quanity)
        </th>
        <th>
            @Html.DisplayNameFor(x => x.Type)
        </th>
    </tr>
    @foreach (var emp in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(x => emp.Name)
            </td>
            <td>
                @Html.DisplayFor(x => emp.Quanity)
            </td>
            <td>
                @Html.DisplayFor(x => emp.Type)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = emp.ProduktId }) |
                @Html.ActionLink("Detail", "Detail", new { id = emp.ProduktId }) |
                @Html.ActionLink("Delete", "Delete", new { id = emp.ProduktId })
            </td>
        </tr>
    }
</table> 